@model EmployeeVM
@{
    ViewData["Title"] = "EmployeeList";
}

<h1>EmployeeList</h1>
<div class="jumbotron">
    <table class="table table-hover">
        <tr>
            <th>Employee Name</th>
            <th>Role</th>
            <th colspan="2" style="text-align:center">Options</th>
        </tr>
        @foreach (Employee item in Model.Employees)
        {
            <tr>
                <td>
                    @item.FirstName
                </td>

                <td>
                    @item.UserRole
                </td>

                <td>
                    <a asp-controller="Employee" asp-action="UpdateEmployee" asp-route-id="@item.ID" class="btn btn-warning">
                        Update
                    </a>
                </td>

                <td>
                    <a asp-controller="Employee" asp-action="DeleteEmployee" asp-route-id="@item.ID" class="btn btn-danger">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </table>
</div>

